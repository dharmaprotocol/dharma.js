{
    "name": "@dharmaprotocol/dharma.js",
    "version": "0.1.35",
    "description": "",
    "keywords": [],
    "main": "dist/dharma.umd.js",
    "module": "dist/lib/src/index.js",
    "typings": "dist/types/src/index.d.ts",
    "files": [
        "dist",
        "webpack.config.js"
    ],
    "author": "Nadav Hollander <nadav@dharma.io>",
    "repository": {
        "type": "git",
        "url": ""
    },
    "license": "MIT",
    "engines": {
        "node": ">=6.0.0"
    },
    "scripts": {
        "build": "tsc -p tsconfig.prod.json && webpack",
        "chain": "bash scripts/init_chain.sh",
        "commit": "git-cz",
        "commitmsg": "commitlint -e $GIT_PARAMS",
        "docs:build": "./scripts/documentation/generate_typedoc.sh && tsc ./scripts/documentation/typedoc_parser.ts && node ./scripts/documentation/parse_typedoc",
        "docs:upload": "aws s3 cp scripts/documentation/output/documentation.json $S3_URL --grants read=uri=http://acs.amazonaws.com/groups/global/AllUsers --content-type application/json",
        "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
        "postpublish": "bash scripts/post_publish.sh",
        "precommit": "lint-staged",
        "prepublishOnly": "npm run build",
        "prettify": "prettier --write {src,__test__,__mocks__}/**/*.ts",
        "report-coverage": "cat ./coverage/lcov.info | coveralls",
        "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
        "semantic-release": "semantic-release pre && npm publish && semantic-release post",
        "start": "rollup -c rollup.config.ts -w",
        "test:prod": "npm run lint && npm run test -- --coverage --no-cache --runInBand",
        "test:watch": "jest --watch --runInBand",
        "test": "jest --runInBand",
        "webpack": "webpack"
    },
    "lint-staged": {
        "{src,__test__,__mocks__}/**/*.ts": [
            "prettier --write"
        ]
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-conventional-changelog"
        },
        "validate-commit-msg": {
            "types": "conventional-commit-types",
            "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
        }
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "modulePaths": [
            "<rootDir>/"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/test/"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 40,
                "functions": 55,
                "lines": 55,
                "statements": 55
            }
        },
        "collectCoverage": true
    },
    "devDependencies": {
        "@commitlint/cli": "^6.1.3",
        "@commitlint/config-conventional": "^6.1.3",
        "@types/jest": "^22.0.0",
        "@types/node": "^8.0.0",
        "awesome-typescript-loader": "^3.4.1",
        "babel-cli": "^6.26.0",
        "bn.js": "^4.11.8",
        "colors": "^1.1.2",
        "commitizen": "^2.9.6",
        "coveralls": "^3.0.0",
        "cross-env": "^5.0.1",
        "cz-conventional-changelog": "^2.0.0",
        "ethereumjs-abi": "^0.6.5",
        "ganache-cli": "beta",
        "husky": "^0.14.0",
        "jest": "^22.0.2",
        "lint-staged": "^6.0.0",
        "lodash.camelcase": "^4.3.0",
        "lodash.compact": "^3.0.1",
        "prettier": "^1.10.2",
        "prompt": "^1.0.0",
        "replace-in-file": "^3.0.0-beta.2",
        "rimraf": "^2.6.1",
        "rollup": "^0.53.0",
        "rollup-plugin-commonjs": "^8.0.2",
        "rollup-plugin-json": "^2.3.0",
        "rollup-plugin-node-builtins": "^2.1.2",
        "rollup-plugin-node-globals": "^1.1.0",
        "rollup-plugin-node-resolve": "^3.0.0",
        "rollup-plugin-sourcemaps": "^0.4.2",
        "rollup-plugin-typescript2": "^0.9.0",
        "secp256k1": "^3.5.0",
        "semantic-release": "^11.0.2",
        "ts-jest": "^22.0.0",
        "ts-node": "^4.1.0",
        "tslint": "^5.8.0",
        "typedoc": "^0.10.0",
        "typescript": "^2.6.2",
        "web3-fake-provider": "^0.1.0",
        "webpack": "^3.11.0"
    },
    "dependencies": {
        "@dharmaprotocol/contracts": "0.1.3",
        "@types/lodash": "^4.14.104",
        "abi-decoder": "https://github.com/dharmaprotocol/abi-decoder",
        "bignumber.js": "^5.0.0",
        "ethereumjs-util": "^5.1.4",
        "jsonschema": "^1.2.2",
        "lodash.defaults": "^4.2.0",
        "lodash.includes": "^4.3.0",
        "lodash.isfunction": "^3.0.9",
        "lodash.isobject": "^3.0.2",
        "lodash.isundefined": "^3.0.1",
        "lodash.map": "^4.6.0",
        "lodash.omit": "^4.5.0",
        "lodash.pickby": "^4.6.0",
        "lodash.values": "^4.3.0",
        "moment": "^2.20.1",
        "web3": "~0.20.7",
        "single-line-string": "^0.0.2",
        "tiny-promisify": "^1.0.0",
        "typedoc-plugin-markdown": "^1.0.14",
        "web3-typescript-typings": "https://github.com/graemecode/web3-typescript-typings",
        "web3-utils": "1.0.0-beta.29"
    }
}
