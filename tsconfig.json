{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "target": "es5",
    "module":"commonjs",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": false,
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/es",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "node_modules/web3-typescript-typings/index.d.ts",
    "src",
    "dist",
    "__test__",
    "__mocks__",
    "utils",
    "rollup.config.ts"
  ]
}
